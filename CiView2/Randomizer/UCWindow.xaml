<UserControl x:Class="Randomizer.UCWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:Randomizer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

   
    <StackPanel HorizontalAlignment="Left">
        <TextBox Name="textBox" Height="19" TextWrapping="Wrap" Width="120" Text="{Binding ElementName=slider, Path=Value}" />
        <Slider Name="slider" Minimum="0"  Maximum="20"  IsSnapToTickEnabled="True" TickFrequency="2" Height="28" Value="{Binding depth, Mode=TwoWay}"/>
        <Button x:Name="playButton" Content="Play" Width="76" Click="Button_Click_1"/>

    </StackPanel>

</UserControl>
