<UserControl x:Class="Viewer.Randomizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBox Name="textBox" Height="19" TextWrapping="Wrap" Width="120" Text="{Binding ElementName=slider, Path=Value}" IsEnabled="False" />
            <Slider Name="slider" Minimum="1"  Maximum="20"  IsSnapToTickEnabled="True" TickFrequency="2" Height="28" Value="2"/>
            <TextBox Name="textBox2" Height="19" TextWrapping="Wrap" Width="120" Text="{Binding ElementName=slider2, Path=Value}" IsEnabled="False" />
            <Slider Name="slider2" Minimum="10"  Maximum="1000"  IsSnapToTickEnabled="True" TickFrequency="2" Height="28" Value="1000"/>
            <Button x:Name="ButtonPlay" Content="play" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.112,1.111" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
