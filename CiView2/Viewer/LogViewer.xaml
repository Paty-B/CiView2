<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:Viewer.View" xmlns:local="clr-namespace:Viewer" x:Class="Viewer.LogViewer"
        Title="Ciview2" Height="600" Width="800">
    <Grid>
        <local:userControl HorizontalAlignment="Right" Margin="568,0,0,0" VerticalAlignment="Top" Height="570" Width="224"/>
        <View:VisualHost x:Name="vHost" HorizontalAlignment="Left" Height="482" Margin="37,34,0,0" VerticalAlignment="Top" Width="30"  LinesChanged="ScrollBarSizeChanged"/>
        <ScrollBar Name="scrollBar" HorizontalAlignment="Right"  Margin="0,0,224,0" ValueChanged="ScrollBar_ValueChanged"  
                   SmallChange="1" LargeChange = "1" Maximum="1"/>
        <TextBox Name="SearchTextBox" HorizontalAlignment="Left"  Height="23" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="543" TextChanged="TextBox_TextChanged"/>
        <TextBox Name="PrintTextBox" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="0 line printed" VerticalAlignment="Bottom" Width="543" IsReadOnly="True"/>


    </Grid>
</Window>
